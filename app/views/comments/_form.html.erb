<h4>Add Comment</h4>
<%= form_for([@event, @event.comments.build]) do |f| %>
      <%= f.label :username %>
      <%= f.text_field( :username) %>
      <br>
      <div>
      <%= f.label :content %>
      <%= f.text_field( :content)  %>
      </div>
      <div>
      <%= f.submit( :Create) %>
      </div>
<%end%>
