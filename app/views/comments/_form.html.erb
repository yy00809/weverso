<h4>Add Comment</h4>
<%= form_for([@event, @event.comments.build]) do |f| %>
      <%= f.label :username %>
      <%= f.text_field( :username, {:class => 'form_control'}) %>

      <%= f.label :content %>
      <%= f.text_field( :content, {:class => 'form_control'})  %>

      <%= f.submit({:class => 'btn btn-primary'}) %>

<%end%>
